---
import MainLayout from '../layouts/MainLayout.astro';

const services = [
  {
    title: 'Massage Therapy',
    description: 'Customized massage treatments to relieve tension and promote relaxation.',
    link: '/services/massage',
  },
  {
    title: 'Energy Work',
    description: 'Holistic energy healing to restore balance and vitality.',
    link: '/services/energy',
  },
  {
    title: 'Combination Therapy',
    description: 'Integrated approach combining massage and energy work for optimal healing.',
    link: '/services/combo',
  },
];
---

<MainLayout
  title="Holistic Healing & Massage"
  description="Experience transformative healing through professional massage therapy and energy work in Portland, Oregon."
>
  <!-- Hero Section -->
  <section class="relative bg-primary-700 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Transform Your Well-being
        </h1>
        <p class="text-lg md:text-xl mb-8 max-w-2xl mx-auto">
          Experience deep healing and relaxation through our holistic approach to body therapy
        </p>
        <a
          href="/contact"
          class="inline-block bg-white text-primary-700 px-8 py-3 rounded-lg font-medium hover:bg-primary-50 transition-colors"
        >
          Book Your Session
        </a>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-16 md:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center mb-12">Our Services</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          services.map(({ title, description, link }) => (
            <a
              href={link}
              class="block p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow bg-primary-50"
            >
              <h3 class="text-xl font-semibold text-primary-700 mb-3">{title}</h3>
              <p class="text-dark/80">{description}</p>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Testimonial Section -->
  <section class="py-16 md:py-24 bg-primary-50">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-8">What Our Clients Say</h2>
      <blockquote class="text-lg italic text-dark/80 mb-6">
        "The combination of massage and energy work was exactly what I needed. I left feeling completely renewed and balanced."
      </blockquote>
      <p class="font-medium text-primary-700">- Sarah M.</p>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-24 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-6">Ready to Begin Your Healing Journey?</h2>
      <p class="text-lg text-dark/80 mb-8">
        Book your session today and experience the transformative power of our therapeutic treatments.
      </p>
      <div class="space-x-4">
        <a
          href="/contact"
          class="inline-block bg-primary-700 text-white px-8 py-3 rounded-lg font-medium hover:bg-primary-700/90 transition-colors"
        >
          Schedule Now
        </a>
        <a
          href="/gift-certificates"
          class="inline-block bg-primary-50 text-primary-700 px-8 py-3 rounded-lg font-medium hover:bg-primary-50/80 transition-colors"
        >
          Gift Cards
        </a>
      </div>
    </div>
  </section>
</MainLayout>
