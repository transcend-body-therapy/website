---
const businessInfo = {
  name: 'Transcend Body Therapy',
  address: '1207 SW Sunset Trail',
  city: 'Palm City, FL 34990',
  phone: '(503) 555-0123',
  hours: {
    weekdays: '9:00 AM - 7:00 PM',
    weekends: '10:00 AM - 5:00 PM',
  },
};
---

<footer class="bg-white mt-auto">
  <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-start">
      <!-- Logo and Name -->
      <div class="text-center md:text-left">
        <h3 class="text-lg font-semibold text-primary-700">{businessInfo.name}</h3>
      </div>

      <!-- Address and Phone -->
      <div class="text-center md:text-left">
        <div class="space-y-1">
          <h3 class="text-lg font-semibold text-primary-700">Visit Us</h3>
          <p class="text-slate-700">{businessInfo.address}</p>
          <p class="text-slate-700">{businessInfo.city}</p>
        </div>

        <div class="space-y-1">
          <h3 class="text-lg font-semibold text-primary-700">Contact</h3>
          <p class="text-slate-700">
            Phone: {businessInfo.phone}
          </p>
        </div>
      </div>

      <!-- Hours -->
      <div class="text-center md:text-left">
        <p class="text-slate-700">
          Mon-Fri: {businessInfo.hours.weekdays}
        </p>
        <p class="text-slate-700">
          Sat-Sun: {businessInfo.hours.weekends}
        </p>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-8 pt-8 border-t border-gray-200 text-center text-sm text-slate-600">
      <p>&copy; {new Date().getFullYear()} {businessInfo.name}. All rights reserved.</p>
    </div>
  </div>
</footer> 