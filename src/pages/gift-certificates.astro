---
import MainLayout from '../layouts/MainLayout.astro';

const giftOptions = [
  {
    title: '60-Minute Massage',
    price: 95,
    description: 'Perfect for first-time clients or those seeking stress relief.',
  },
  {
    title: '90-Minute Massage',
    price: 135,
    description: 'Our most popular option for deep relaxation and healing.',
  },
  {
    title: 'Energy Healing Session',
    price: 85,
    description: 'A transformative experience for spiritual and emotional well-being.',
  },
  {
    title: 'Combination Therapy',
    price: 165,
    description: 'The ultimate gift of healing combining massage and energy work.',
  },
];
---

<MainLayout
  title="Gift Certificates"
  description="Give the gift of healing and relaxation with our therapeutic massage and energy work gift certificates."
>
  <div class="bg-white py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h1 class="text-4xl font-bold text-primary-700 mb-4">Gift Certificates</h1>
        <p class="text-lg text-dark/80 max-w-2xl mx-auto">
          Share the healing experience with someone special. Our gift certificates are perfect for any occasion.
        </p>
      </div>

      <!-- Gift Card Options -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
        {
          giftOptions.map(({ title, price, description }) => (
            <div class="bg-primary-50 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
              <h2 class="text-2xl font-semibold text-primary-700 mb-2">{title}</h2>
              <p class="text-3xl font-bold text-primary-700 mb-4">${price}</p>
              <p class="text-dark/80 mb-6">{description}</p>
              <button
                class="w-full bg-primary-700 text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-700/90 transition-colors"
                disabled
              >
                Coming Soon
              </button>
            </div>
          ))
        }
      </div>

      <!-- Additional Information -->
      <div class="bg-primary-50 rounded-lg p-8 text-center">
        <h2 class="text-2xl font-semibold text-primary-700 mb-4">Gift Certificate Information</h2>
        <div class="text-dark/80 space-y-4 max-w-2xl mx-auto">
          <p>
            Our online gift certificate system is currently under development. In the meantime, please
            contact us directly to purchase a gift certificate.
          </p>
          <p>
            Call us at (772) 555-0123 or visit our location to purchase a gift certificate in person.
          </p>
          <p class="text-sm">
            Gift certificates are valid for one year from the date of purchase and are non-refundable.
          </p>
        </div>
      </div>
    </div>
  </div>
</MainLayout> 