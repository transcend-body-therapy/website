---
interface Props {
  items: {
    quote: string;
    author: string;
  }[];
}

const { items } = Astro.props;
---

<div class="relative w-full overflow-hidden">
  <div class="flex snap-x snap-mandatory overflow-x-auto scrollbar-hide">
    {
      items.map((item) => (
        <div class="snap-center shrink-0 w-full px-4">
          <div class="bg-white rounded-2xl p-8 shadow-sm">
            <svg class="w-8 h-8 text-sage/30 mb-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
            </svg>
            <blockquote class="text-lg md:text-xl font-body text-custom-slate/80 mb-6 leading-relaxed">
              "{item.quote}"
            </blockquote>
            <p class="font-medium text-sage">- {item.author}</p>
          </div>
        </div>
      ))
    }
  </div>
  <div class="absolute bottom-0 left-0 right-0 flex justify-center gap-3 py-6">
    {
      items.map((_, i) => (
        <button
          class="w-3 h-3 rounded-full bg-sage/20 peer-checked:bg-sage transition-colors"
          aria-label={`Go to slide ${i + 1}`}
        />
      ))
    }
  </div>
</div>

<style>
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style> 