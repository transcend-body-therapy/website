---
import MainLayout from '../layouts/MainLayout.astro';
import Carousel from '../components/Carousel.astro';

const services = [
  {
    title: 'Massage Therapy',
    description: 'Experience deep relaxation and healing through customized massage treatments. Our skilled therapists blend techniques to address your specific needs and promote overall wellness.',
    image: '/images/massage.jpg',
    link: '/services/massage',
  },
  {
    title: 'Energy Work',
    description: 'Restore balance and vitality with our holistic energy healing sessions. Using gentle techniques, we help clear blockages and enhance your body\'s natural healing abilities.',
    image: '/images/energy.jpg',
    link: '/services/energy',
  },
  {
    title: 'Combo Packages',
    description: 'Get the best of both worlds with our integrated approach. Combining massage and energy work creates a powerful synergy for optimal physical and energetic healing.',
    image: '/images/combo.jpg',
    link: '/services/combo',
  },
];

const testimonials = [
  {
    quote: "The combination of massage and energy work was exactly what I needed. I left feeling completely renewed and balanced.",
    author: "Sarah M."
  },
  {
    quote: "Best therapeutic massage I've ever had. The attention to detail and care is outstanding.",
    author: "Michael R."
  },
  {
    quote: "A truly transformative experience. The energy work helped me release old patterns I'd been holding onto.",
    author: "Jennifer L."
  }
];
---

<MainLayout
  title="Transcend Body Therapy | Massage & Energy Work in Palm City, FL"
  description="Experience transformative healing through professional massage therapy and energy work in Palm City, Florida."
>
  <!-- Hero Section -->
  <section class="relative h-[500px] md:h-[600px] flex items-center justify-center">
    <picture class="absolute inset-0 w-full h-full">
      <source srcset="/images/hero-mobile.webp" media="(max-width: 767px)" />
      <img
        src={`/images/hero-desktop.jpg?t=${Date.now()}`}
        alt="Peaceful massage therapy room"
        class="w-full h-full object-cover"
      />
    </picture>
    <div class="absolute inset-0 bg-dark/40"></div>
    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-head mb-6 text-white">
        Relax. Heal.<br />Transcend.
      </h1>
      <p class="text-lg md:text-xl mb-8 text-white/90 font-body">
        Therapeutic massage & energy work in Palm City, FL.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="#contact"
          class="inline-block bg-sage hover:bg-sage-700 text-white px-6 py-3 rounded-lg font-medium transition-colors text-center"
        >
          Book a Session
        </a>
        <a
          href="/gift-certificates"
          class="inline-block bg-white/90 hover:bg-white text-sage px-6 py-3 rounded-lg font-medium transition-colors text-center"
        >
          Buy a Gift Certificate
        </a>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-24 md:py-32 bg-ivory">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl md:text-5xl font-head text-center mb-16 text-sage">Our Services</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          services.map(({ title, description, image, link }) => (
            <a
              href={link}
              class="group block overflow-hidden rounded-2xl bg-white shadow-sm hover:shadow-lg transition-all duration-300"
            >
              <div class="aspect-w-3 aspect-h-2 overflow-hidden">
                <img
                  src={image}
                  alt={title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                />
              </div>
              <div class="p-8">
                <h3 class="text-2xl font-head text-sage mb-4">{title}</h3>
                <p class="text-custom-slate/80 font-body leading-relaxed">{description}</p>
                <div class="mt-6 flex items-center text-sage">
                  <span class="text-sm font-medium">Learn more</span>
                  <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Testimonial Section -->
  <section class="py-24 md:py-32 bg-sage/10">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl md:text-5xl font-head text-sage mb-16">What Our Clients Say</h2>
      <Carousel items={testimonials} />
    </div>
  </section>

  <!-- Promo Banner -->
  <section class="bg-sage text-white py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-head mb-6">
        First-Time Guest? Enjoy $10 off your first 60-min massage.
      </h2>
      <a
        href="#contact"
        class="inline-block bg-white text-sage px-8 py-4 rounded-lg font-medium hover:bg-white/90 transition-colors mt-4"
      >
        Book Now & Save
      </a>
    </div>
  </section>
</MainLayout>
