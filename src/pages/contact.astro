---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout
  title="Contact Us | Transcend Body Therapy"
  description="Get in touch with Transcend Body Therapy to schedule your appointment or ask any questions."
>
  <div class="bg-white py-16 md:py-24">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Toast Notification -->
      <div
        id="toast"
        class="fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg transform translate-x-full transition-transform duration-300"
      >
        Message sent successfully!
      </div>

      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-primary-700 mb-4">Contact Us</h1>
        <p class="text-lg text-dark/80">
          Ready to begin your healing journey? Get in touch with us today.
        </p>
      </div>

      <form
        id="contactForm"
        class="bg-primary-50 rounded-lg p-8 shadow-sm"
      >
        <div class="space-y-6">
          <!-- Name -->
          <div>
            <label for="name" class="block text-sm font-medium text-dark mb-2">
              Name
            </label>
            <input
              type="text"
              name="name"
              id="name"
              required
              class="w-full px-4 py-2 rounded-lg border border-primary-50 focus:outline-none focus:ring-2 focus:ring-primary-700"
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium text-dark mb-2">
              Email
            </label>
            <input
              type="email"
              name="email"
              id="email"
              required
              class="w-full px-4 py-2 rounded-lg border border-primary-50 focus:outline-none focus:ring-2 focus:ring-primary-700"
            />
          </div>

          <!-- Phone -->
          <div>
            <label for="phone" class="block text-sm font-medium text-dark mb-2">
              Phone
            </label>
            <input
              type="tel"
              name="phone"
              id="phone"
              class="w-full px-4 py-2 rounded-lg border border-primary-50 focus:outline-none focus:ring-2 focus:ring-primary-700"
            />
          </div>

          <!-- Service -->
          <div>
            <label for="service" class="block text-sm font-medium text-dark mb-2">
              Interested Service
            </label>
            <select
              name="service"
              id="service"
              required
              class="w-full px-4 py-2 rounded-lg border border-primary-50 focus:outline-none focus:ring-2 focus:ring-primary-700"
            >
              <option value="">Select a service</option>
              <option value="massage">Massage Therapy</option>
              <option value="energy">Energy Work</option>
              <option value="combo">Combination Therapy</option>
            </select>
          </div>

          <!-- Message -->
          <div>
            <label for="message" class="block text-sm font-medium text-dark mb-2">
              Message
            </label>
            <textarea
              name="message"
              id="message"
              rows="4"
              class="w-full px-4 py-2 rounded-lg border border-primary-50 focus:outline-none focus:ring-2 focus:ring-primary-700"
            ></textarea>
          </div>

          <!-- Submit Button -->
          <div>
            <button
              type="submit"
              class="w-full bg-primary-700 text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-700/90 transition-colors"
            >
              Send Message
            </button>
          </div>
        </div>
      </form>

      <!-- Contact Information -->
      <div class="mt-12 text-center">
        <h2 class="text-2xl font-semibold text-primary-700 mb-4">Other Ways to Reach Us</h2>
        <div class="space-y-2 text-dark/80">
          <p>Phone: (772) 555-0123</p>
          <p>Email: info@transcendbodytherapy.com</p>
          <p>Address: 123 Healing Street, Suite 100, Stuart, FL 34994</p>
        </div>
      </div>
    </div>
  </div>
</MainLayout>

<script>
  const form = document.getElementById('contactForm') as HTMLFormElement;
  const toast = document.getElementById('toast');

  const showToast = (message: string, isError = false) => {
    if (toast) {
      toast.textContent = message;
      toast.classList.remove('translate-x-full');
      toast.classList.remove('bg-green-500', 'bg-red-500');
      toast.classList.add(isError ? 'bg-red-500' : 'bg-green-500');
      
      setTimeout(() => {
        toast.classList.add('translate-x-full');
      }, 3000);
    }
  };

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(form);
    const data = Object.fromEntries(formData);

    try {
      const response = await fetch('/api/contact', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (result.success) {
        showToast('Message sent successfully!');
        form.reset();
      } else {
        showToast(result.message || 'Failed to send message', true);
      }
    } catch (error) {
      showToast('Sorry, there was an error sending your message', true);
      console.error('Error:', error);
    }
  });
</script> 